#!/bin/bash
set -x
CONFIG_FILE=~/.config/hypr/conf.d/monitors.conf

exec > >(tee /tmp/output.log) 2>&1

if [[ $1 == reset ]]; then
  echo "Resetting monitor config..."
  echo '# Config file maintained by monitor-control script. Do not edit'
  echo 'monitor = DP-1,5120x1440@239.76,0x0,auto' >$CONFIG_FILE
  #echo 'monitor = DP-3,1920x1080@60,1750x1440,1' >>$CONFIG_FILE
fi

if [[ $1 == sunshine ]]; then
  echo "Setting sunshine monitor config..."
  HYPRLAND_INSTANCE_SIGNATURE=$(hyprctl instances -j | jq -r '.[].instance') hyprctl dispatch dpms on
  echo 'monitor = DP-1,1920x1080@239.76Hz,0x0,auto' >$CONFIG_FILE
  echo 'monitor = DP-3,disable' >>$CONFIG_FILE
fi

sleep 2
