#!/bin/bash

systemctl --user enable mpd
systemctl --user start mpd

# HiDPI fixes
echo 'Xft.dpi: 192' > "$HOME/.Xresources"
dconf write /org/gnome/desktop/interface/font-name "'Cantarell 18'"
dconf write /org/gnome/desktop/interface/cursor-size 36
dconf write /org/gnome/desktop/interface/text-scaling-factor 0.7
dconf write /org/gnome/desktop/interface/scaling-factor 3
sed -i 's/\(font =[a-zA-Z ]*\).*/\112/' ~/.config/terminator/config

# Stop mouse cursor disappearing when touch screen or synergy is in use
dconf write /org/gnome/settings-daemon/plugins/cursor/active false
